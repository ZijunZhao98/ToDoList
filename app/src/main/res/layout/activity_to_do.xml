<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ToDoActivity">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_width="wrap_content">
        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title:"
            android:textSize="20sp"
            android:textColor="@android:color/black"/>

        <EditText
            android:id="@+id/input_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_title" />

        <TextView
            android:id="@+id/text_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category:"
            android:textSize="20sp"
            android:layout_below="@+id/input_title"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/input_category"
            android:text="click to choose a category"
            android:textSize="18sp"
            android:layout_margin = "10sp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_category" />

        <TextView
            android:id="@+id/text_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail:"
            android:textSize="20sp"
            android:layout_below="@+id/input_category"
            android:textColor="@android:color/black"/>

        <EditText
            android:id="@+id/input_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_detail" />

        <TextView
            android:id="@+id/text_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deadline:"
            android:textSize="20sp"
            android:layout_below="@+id/input_detail"
            android:textColor="@android:color/black"/>

        <DatePicker
            android:id="@+id/input_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_deadline"
            >
        </DatePicker>

        <TextView
            android:id="@+id/text_importance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Importance:"
            android:textSize="20sp"
            android:layout_below="@+id/input_deadline"
            android:textColor="@android:color/black"/>

        <Spinner
            android:id="@+id/input_importance"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_importance"
            />

        <Button
            android:id="@+id/create_btn"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/input_importance"
            android:text="Create"
            />


    </RelativeLayout>

</ScrollView>